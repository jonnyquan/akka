<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xkeshi.task.dao.ProductDAO">


    <insert id="saveProducts" >
        INSERT INTO product(name,sell_id)
                  VALUES
                  <foreach collection="productList" item="item" separator=",">
                  (#{item.name},#{item.sellId})
                  </foreach>
    </insert>



    <select id="findProducts" resultType="com.xkeshi.task.entities.Product">
        select * from product
        where sell_id = #{sellId} limit #{offset},#{size}
    </select>
</mapper>
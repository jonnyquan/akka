<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           ">

    <description>spring-services-configuration</description>

    <!-- ftp服务器-->
    <bean id="fileLoader" class="com.utils.FtpHandlerImpl">
        <constructor-arg name="host" value="localhost"/>
        <constructor-arg name="port" value="21"/>
        <constructor-arg name="user" value="huihui"/>
        <constructor-arg name="password" value="4870025"/>
        <constructor-arg name="root" value="/Users/huihui/Documents/"/>
    </bean>
    <!-- akka 启动配置-->
    <bean id="akkaProcessHandler" class="com.AkkaProcessHandler"/>

    <context:component-scan base-package="com.xkeshi.task.services"/>



</beans>